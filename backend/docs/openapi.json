{
  "openapi": "3.0.0",
  "info": {
    "title": "FARMHUB_V2 API",
    "version": "1.0.0",
    "description": "Minimal OpenAPI spec for FARMHUB_V2 backend â€” admin endpoints, auth, AI, weather, streaks, diseases"
  },
  "servers": [
    { "url": "http://localhost:5000", "description": "Local dev server" }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Register a new user",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/RegisterPayload" } } }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LoginPayload" } } } },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/auth/me": {
      "get": {
        "tags": ["Auth"],
        "summary": "Get current user",
        "responses": { "200": { "description": "OK" } },
        "security": [{ "bearerAuth": [] }]
      }
    },
    "/ai/diagnose": {
      "post": {
        "tags": ["AI"],
        "summary": "Request AI diagnosis",
        "security": [{ "bearerAuth": [] }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AIDiagnosePayload" } } } },
        "responses": { "200": { "description": "Diagnosis result" } }
      }
    },
    "/admin/weather": {
      "get": {
        "tags": ["Weather"],
        "summary": "Get current weather for a location (admin)",
        "parameters": [ { "name": "q", "in": "query", "required": true, "schema": { "type": "string" } } ],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Weather payload" } }
      }
    },
    "/admin/diseases": {
      "get": { "tags": ["Diseases"], "summary": "List diseases (admin)", "security": [{ "bearerAuth": [] }], "responses": { "200": { "description": "OK" } } },
      "post": { "tags": ["Diseases"], "summary": "Create disease", "security": [{ "bearerAuth": [] }], "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Disease" } } } }, "responses": { "201": { "description": "Created" } } }
    },
    "/admin/diseases/{id}": {
      "put": { "tags": ["Diseases"], "summary": "Update disease", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "security": [{ "bearerAuth": [] }], "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Disease" } } } }, "responses": { "200": { "description": "OK" } } },
      "delete": { "tags": ["Diseases"], "summary": "Soft delete disease", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "security": [{ "bearerAuth": [] }], "responses": { "200": { "description": "OK" } } }
    },
    "/admin/disease-categories": {
      "get": { "tags": ["Categories"], "summary": "List categories (admin)", "security": [{ "bearerAuth": [] }], "responses": { "200": { "description": "OK" } } },
      "post": { "tags": ["Categories"], "summary": "Create category", "security": [{ "bearerAuth": [] }], "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Category" } } } }, "responses": { "201": { "description": "Created" } } }
    },
    "/admin/streaks/record": {
      "post": { "tags": ["Streaks"], "summary": "Record streak for current user", "security": [{ "bearerAuth": [] }], "responses": { "200": { "description": "OK" } } }
    },
    "/admin/streaks/top": {
      "get": { "tags": ["Streaks"], "summary": "Top leaderboard (admin)", "security": [{ "bearerAuth": [] }], "parameters": [{ "name": "limit", "in": "query", "schema": { "type": "integer" } }], "responses": { "200": { "description": "OK" } } }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    },
    "schemas": {
      "RegisterPayload": { "type": "object", "properties": { "username": { "type": "string" }, "email": { "type": "string" }, "password": { "type": "string" } }, "required": ["username","email","password"] },
      "LoginPayload": { "type": "object", "properties": { "username": { "type": "string" }, "password": { "type": "string" } }, "required": ["username","password"] },
      "AIDiagnosePayload": { "type": "object", "properties": { "description": { "type": "string" }, "symptoms": { "type": "string" }, "extra": { "type": "string" } }, "required": ["description","symptoms"] },
      "Disease": { "type": "object", "properties": { "name": { "type": "string" }, "slug": { "type": "string" }, "category": { "type": "string" }, "severity": { "type": "string" }, "plantTypes": { "type": "array", "items": { "type": "string" } } } },
      "Category": { "type": "object", "properties": { "name": { "type": "string" }, "slug": { "type": "string" } } }
    }
  }
}
